{
    "version": 2,
    "builds": [{
        "src": "/devanshecp/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    }, {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": { "distDir": "staticfiles_build" }
    }],
    "routes": [{
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/media/(.*)",  // Route for serving media files
            "dest": "/media/$1"    // Destination directory for media files
        },
        {
            "src": "/(.*)",
            "dest": "/devanshecp/wsgi.py"
        }
    ]
}
